generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Estoque_Tecidos {
  id_do_tecido       Int     @id @default(autoincrement())
  nome_do_tecido     String
  valor              Float
  fornecedor         String
  composicao         String?
  largura            Float?
  peso               Float?
  estoque            Int
  data_              DateTime
  tamanho            Float?
  notas              String?
}
model Estoque_Agulhas {
  id_da_agulha       Int     @id @default(autoincrement())
  valor              Float
  fornecedor         String?
  numeracao          String?
  estoque            Int
  data               DateTime
  notas              String?
}
model Funcionarios {
  id                  Int     @id @default(autoincrement())
  nome_do_funcionario String
  idade               Int
  funcoes             String?
  aniversario         DateTime?
  identidade          String?
  cpf                 String?
  pis                 String?
  pix                 String?     
  data                DateTime @default(now())
  notas               String?
}
model Tarefas {
  id                  Int     @id @default(autoincrement())
  tarefa              String
  status              String
  data_abertura       DateTime
  data_conclusao      DateTime?
  notas               String?
}
model Pedidos {
  id                  Int     @id @default(autoincrement())
  Tipo_do_pedido      String
  status              String
  data_do_pedido      DateTime
  data_de_entrega     DateTime?
}