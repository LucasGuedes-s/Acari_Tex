generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Estabelecimento{
  cnpj             Int @id
  nome             String
  email            String
  senha            String
  estoque_tecidos  Estoque_Tecidos[]
  estoque_agulhas  Estoque_Agulhas[]
  tarefas          Tarefas[]
}

model Estoque_Tecidos {
  id_do_tecido       Int     @id @default(autoincrement())
  estabelecimento    Estabelecimento  @relation(fields: [id_estabelecimento], references: [cnpj])
  id_estabelecimento Int
  nome_do_tecido     String
  valor              Float
  fornecedor         String
  composicao         String?
  largura            Float?
  peso               Float?
  estoque            Int
  data_              DateTime
  tamanho            Float?
  notas              String?
}

model Estoque_Agulhas {
  id_da_agulha       Int     @id @default(autoincrement())
  estabelecimento    Estabelecimento  @relation(fields: [id_estabelecimento], references: [cnpj])
  id_estabelecimento Int
  valor              Float
  fornecedor         String?
  numeracao          String?
  estoque            Int
  data               DateTime
  notas              String?
}
model Funcionarios {
  id                  Int     @id @default(autoincrement())
  nome_do_funcionario String
  idade               Int
  funcoes             String?
  aniversario         DateTime?
  identidade          String?
  cpf                 String?
  pis                 String?
  pix                 String?     
  data                DateTime @default(now())
  Horas_faltas        Float?
  Horas_extras        Float?
  justificativa       String?
  notas               String?
}
model Tarefas {
  id                  Int     @id @default(autoincrement())
  estabelecimento     Estabelecimento  @relation(fields: [id_estabelecimento], references: [cnpj])
  id_estabelecimento  Int
  tarefa              String
  status              String
  data_abertura       DateTime
  data_conclusao      DateTime?
  notas               String?
}
model Pedidos {
  id                  Int     @id @default(autoincrement())
  Tipo_do_pedido      String
  status              String
  data_do_pedido      DateTime
  data_de_entrega     DateTime?
}